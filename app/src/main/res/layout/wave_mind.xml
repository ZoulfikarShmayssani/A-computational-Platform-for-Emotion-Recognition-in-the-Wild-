<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".MindWaveSensor">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/startButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:enabled="false"
                android:maxHeight="20dp"
                android:minHeight="20dp"
                android:text="Start"
                android:textSize="12dp" />

            <Button
                android:id="@+id/headsetButton"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:maxHeight="20dp"
                android:minHeight="20dp"
                android:text="Headset"
                android:textSize="12dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
